
@{
    ViewBag.Title = "MediPlus Admin Dashboard";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                <div class="dash-widget">
                    <span class="dash-widget-bg1"><i class="fa fa-stethoscope" aria-hidden="true"></i></span>
                    <div class="dash-widget-info text-right">
                        <h3>98</h3>
                        <span class="widget-title1">Doctors <i class="fa fa-check" aria-hidden="true"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                <div class="dash-widget">
                    <span class="dash-widget-bg2"><i class="fa fa-user-o"></i></span>
                    <div class="dash-widget-info text-right">
                        <h3>1072</h3>
                        <span class="widget-title2">Patients <i class="fa fa-check" aria-hidden="true"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                <div class="dash-widget">
                    <span class="dash-widget-bg3"><i class="fa fa-user-md" aria-hidden="true"></i></span>
                    <div class="dash-widget-info text-right">
                        <h3>72</h3>
                        <span class="widget-title3">Attend <i class="fa fa-check" aria-hidden="true"></i></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xl-3">
                <div class="dash-widget">
                    <span class="dash-widget-bg4"><i class="fa fa-heartbeat" aria-hidden="true"></i></span>
                    <div class="dash-widget-info text-right">
                        <h3>618</h3>
                        <span class="widget-title4">Pending <i class="fa fa-check" aria-hidden="true"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 col-lg-8 col-xl-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title d-inline-block">Upcoming Dr's Appointments</h4> <a href="/admin/appointments" class="btn btn-primary float-right">View all</a>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead class="d-none">
                                    <tr>
                                        <th>Patient Name</th>
                                        <th>Doctor Name</th>
                                        <th>Timing</th>
                                        <th class="text-right">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                        @if (ViewBag.table.Rows.Count > 0)
                                        {
                                            foreach (var row in ViewBag.table.Rows)
                                            {
                                                <tr>
                                                    <td style="min-width: 200px;">
                                                        <h2>Pt##@row[9] | @row[10] <span>@row[17]</span></h2>
                                                    </td>
                                                    <td>
                                                        <h5 class="time-title p-0">Appointment With</h5>
                                                        <p>Dr. @row[23]</p>
                                                    </td>
                                                    <td>
                                                        <h5 class="time-title p-0">Timing</h5>
                                                        <p>@row[4] @row[5]</p>
                                                    </td>
                                                    <td class="text-right">
                                                        <span class="custom-badge mt-2 fa-2x status-badge" data-status="@row["Status"]">@row["Status"]</span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 col-xl-4">
                <div class="card member-panel">
                    <div class="card-header bg-white">
                        <h4 class="card-title mb-0">Doctors</h4>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.table1.Rows.Count > 0)
                        {
                            foreach (var row in ViewBag.table1.Rows)
                            {
                                <ul class="contact-list">
                                    <li>
                                        <div class="contact-cont">
                                            <div class="float-left user-img m-r-10">
                                                <img src="~/Content/img/Doctor/@row["User_Image"]" alt="Dr Image" class="w-40 rounded-circle"><span class="status online"></span>
                                            </div>
                                            <div class="contact-info">
                                                <span class="contact-name text-ellipsis">Dr##@row["Dr_Id"] | Dr @row["Name"]</span>
                                                <span class="contact-date">@row["Qualification"]</span>
                                                <span class="contact-date">@row["Assigned_Department"]</span>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            }
                        }
                    </div>
                    <div class="card-footer text-center bg-white">
                        <a href="/admin/doctors" class="text-muted">View all Doctors</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 col-lg-8 col-xl-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title d-inline-block">Upcoming Lab Test Appointments</h4> <a href="/admin/labappointment" class="btn btn-primary float-right">View all</a>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead class="d-none">
                                    <tr>
                                        <th>Patient Name</th>
                                        <th>Test Name</th>
                                        <th>Timing</th>
                                        <th class="text-right">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.table4.Rows.Count > 0)
                                    {
                                        foreach (var row in ViewBag.table4.Rows)
                                        {
                                            <tr>
                                                <td style="min-width: 200px;">
                                                    <h2>T##@row[8] <span>@row[9]</span></h2>
                                                </td>
                                                <td>
                                                    <h5 class="time-title p-0">Test Name</h5>
                                                    <p>@row["ServiceName"]</p>
                                                </td>
                                                <td>
                                                    <h5 class="time-title p-0">Timing</h5>
                                                    <p>@row[3] @row[4]</p>
                                                </td>
                                                <td class="text-right">
                                                    <span class="custom-badge mt-2 fa-2x status-badge" data-status="@row["Status"]">@row["Status"]</span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 col-xl-4">
                <div class="card member-panel">
                    <div class="card-header bg-white">
                        <h4 class="card-title mb-0">Patients</h4>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.table3.Rows.Count > 0)
                        {
                            foreach (var row in ViewBag.table3.Rows)
                            {
                                <ul class="contact-list">
                                    <li>
                                        <div class="contact-cont">
                                            <div class="float-left user-img m-r-10">
                                                <img src="~/Content/img/patient/@row["Pt_Profile"]" alt="Dr Image" class="w-40 rounded-circle">
                                            </div>
                                            <div class="contact-info">
                                                <span class="contact-name text-ellipsis">Pt##@row["Pt_Id"] | @row["Name"]</span>
                                                <span class="contact-date">@row["Phone"]</span>
                                                <span class="contact-date">@row["Email_Id"]</span>
                                                <span class="contact-date">@row["Address"]</span>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            }
                        }
                    </div>
                    <div class="card-footer text-center bg-white">
                        <a href="/admin/patients" class="text-muted">View all Patients</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    document.getElementById("navdashboard").classList.add("active");

    document.addEventListener("DOMContentLoaded", function () {
        const statusBadges = document.querySelectorAll(".status-badge");
        statusBadges.forEach(badge => {
            const status = badge.dataset.status.toLowerCase();

            // Add class based on status value
            if (status === "approved") {
                badge.classList.add("badge-success");
            } else if (status === "pending") {
                badge.classList.add("badge-warning");
            } else if (status === "completed") {
                badge.classList.add("badge-secondary");
            }
        });
    });
</script>
