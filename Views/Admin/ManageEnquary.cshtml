
@{
    ViewBag.Title = "ManageEnquary";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-4 col-3">
                <h4 class="page-title">Patient Enquaries</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-border table-striped custom-table datatable mb-0">
                        <thead>
                            <tr>
                                <th>SR.</th>
                                <th>Name</th>
                                <th>Phone Nu.</th>
                                <th>Email ID</th>
                                <th>Subject</th>
                                <th>Message</th>
                                <th>Submitted At</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.table.Rows.Count > 0)
                            {
                                foreach (var row in ViewBag.table.Rows)
                                {
                                    <tr>
                                        <td>@row["Sr"]</td>
                                        <td>@row["Name"]</td>
                                        <td>@row["Phone"]</td>
                                        <td>@row["EmailId"]</td>
                                        <td>@row["Subject"]</td>
                                        <td>@row["Message"]</td>
                                        <td>@row["SubmiteedAt"]</td>
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a href="/admin/writeemail?EmailId=@row["EmailId"]" class="dropdown-item"><i class="fa fa-comment"></i> Send Reply</a>
                                                    <a class="dropdown-item" href="/admin/deleteenq?Sr=@row["Sr"]"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    document.getElementById("navmanageenq").classList.add("active");
</script>