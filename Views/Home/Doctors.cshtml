
@{
    ViewBag.Title = "Doctor";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<!-- Breadcrumbs -->
<div class="breadcrumbs overlay">
    <div class="container">
        <div class="bread-inner">
            <div class="row">
                <div class="col-12">
                    <h2>Doctors</h2>
                    <ul class="bread-list">
                        <li><a href="/home/index">Home</a></li>
                        <li><i class="icofont-simple-right"></i></li>
                        <li class="active">Doctors</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->
<!-- Start Doctor-->
<div class="container-xxl py-5">
    <div class="container">
        <div class="col-lg-12">
            <div class="section-title wow fadeInUp" data-wow-delay="0.1s">
                <h2>Experienced Doctors Who Care Beyond Treatment</h2>
                <img src="~/Content/img/section-img.png" alt="#">
                <p>Our team of highly qualified doctors brings years of expertise across various specialties. With a patient-first approach and ongoing training in the latest medical advancements, we provide care you can trust.</p>
            </div>
        </div>
        <div class="row g-4">
            @if (ViewBag.table.Rows.Count > 0)
            {
                foreach (var row in ViewBag.table.Rows)
                {

                    <div class="col-lg-3 col-md-6">
                        <div class="team-item position-relative rounded overflow-hidden">
                            <div class="overflow-hidden">
                                <img class="img-fluid" src="~/Content/img/doctor/@row["User_Image"]" alt="Dr's Img" height="250" width="270">
                            </div>
                            <div class="team-text bg-light text-center p-4">
                                <h5>@row["Name"]</h5>
                                <p>@row["DepName"]</p>
                                <p>@row["Address"]</p>
                                <div class="team-social text-center">
                                    <p>@row["Phone"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
<!-- End Doctor-->
