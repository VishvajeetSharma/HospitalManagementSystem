
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<link href="~/Content/services.css" rel="stylesheet" />

<!-- Breadcrumbs -->
<div class="breadcrumbs overlay">
    <div class="container">
        <div class="bread-inner">
            <div class="row">
                <div class="col-12">
                    <h2>Services</h2>
                    <ul class="bread-list">
                        <li><a href="/home/index">Home</a></li>
                        <li><i class="icofont-simple-right"></i></li>
                        <li class="active">Serivces</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->
<!-- Start service -->
<section class="service">
    <div class="container">
        <div class="row mt-2">
            <div class="col-lg-12">
                <div class="section-title wow fadeInUp" data-wow-delay="0.1s">
                    <h2>We Offer Different Services To Improve Your Health</h2>
                    <img src="~/Content/img/section-img.png" alt="#">
                    <p>We provide comprehensive medical services, from routine check-ups to advanced treatments. Our expert doctors and skilled staff ensure quality care with the latest technology.</p>
                </div>
            </div>
        </div>
        <div class="service-inner">
            <div class="row my-5">
                @if (ViewBag.table.Rows.Count > 0)
                {
                    foreach (var row in ViewBag.table.Rows)
                    {
                        <div class="col-lg-4 col-md-6 col-12 my-3 wow fadeInUpBig" data-wow-delay="0.2s">
                            <!-- single-service -->
                            <div class="single-service" style="min-height: 165px;">
                                <div class="inner">
                                    <div class="icon">
                                        <i class="fa fa-stethoscope"></i>
                                    </div>
                                    <div class="service-content text-center">
                                        <h4>@row["ServiceName"]</h4><br />
                                        <p>@row["DepName"] Department</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
<!--/ End service -->